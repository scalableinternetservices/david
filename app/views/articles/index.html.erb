<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
    </tr>
  </thead>

  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to(article.title, article.url) %></td>
      <td><%= article.url %></td>
    </tr>
  <% end %>
</table>

<%= simple_form_for(@article) do |form| %>
  <%= form.input :title, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
  <%= form.input :url, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
  <%= form.button :submit, class: 'btn-primary btn-sm' %>
<% end %>
